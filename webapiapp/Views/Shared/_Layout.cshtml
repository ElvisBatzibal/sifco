<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/lobipanel/lobipanel.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" type="text/css" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#3374FF; font-family:Verdana">
        <div class="container">
            <div class="navbar-header nav-left">
                <img src="~/Content/images/logo.png" />
            </div>
            <div class="navbar-header">
                @if (Session["Usuario"] != null)
                {
                    var Usuario = (webapiapp.Models.AccountUserDTO)Session["Usuario"];
                    <h4 style="color:white">
                        Bienvenido: @Usuario.UserName
                    </h4>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("LogOut","Home")">
                        Salir
                    </a>
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="width:100%">
        @RenderBody()
        <div id="banerlobipaneldefault" class="row col-lg-12"></div>
    </div>

    <script src="~/Scripts/jquery.1.11.1.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/lobipanel/lobipanel.js"></script>
    <script src="~/Scripts/lobipanel/InitLobiModal.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")*@

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
