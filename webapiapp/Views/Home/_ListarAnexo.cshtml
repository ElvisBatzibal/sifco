

@using webapiapp.Models;
@{

    int NumLinea = 1;
}


<div class="col-lg-12">

    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Codigo</th>
                <th scope="col">Fecha  Creacion</th>
                <th scope="col">Nombre Archivo</th>
                <th scope="col">Tipo Contenido</th>
                <th scope="col">Extension</th>
                <th scope="col">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (IList<Appointments_attachedDTO>)ViewBag.ListaAnexo)
            {
                <tr>
                    <td>@NumLinea</td>
                    <td>@item.EntityID</td>
                    <td>@item.Log.CreationDate.ToShortDateString()</td>
                    <td>@item.FileName</td>
                    <td>@item.ContentType</td>
                    <td>@item.FileType</td>
                    <td>
                        <a target="_blank" class="btn btn-sm" data-toggle="tooltip" data-placement="top" title="Abrir Anexo"
                           href="@Url.Action("OpenAnexo", "Home", new { k = item.FileName })">
                            <i class="fa fa-paperclip fa-lg" aria-hidden="true"></i>
                            Abrir
                        </a>
                    </td>
                </tr>
                NumLinea++;
            }

        </tbody>
    </table>
</div>